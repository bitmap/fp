{
  "compilerOptions": {
    "rootDir": "lib",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6"
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "tests",
    "dist",
    "node_modules"
  ]
}
